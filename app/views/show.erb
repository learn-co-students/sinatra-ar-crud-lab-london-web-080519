<h1>Articles Show</h1>

<p><%= @article.title %></p>
<p><%= @article.content %></p>

<form action="/articles/<%= @article.id %>" method="post">
  <!-- Hidden input to change "POST" method to "DELETE" -->
  <input type="hidden" name="_method" value="delete">
  <button type="submit" name="submit" id="Submit" value="submit">Delete</button>
</form>