<form action="/articles/<%= @article.id %>" method='POST'>
    <input type="hidden" name="_method" id="hidden" value="patch">
    <p>Title: <input id="title" type="text" name='article[title]' value="<%= @article.title %>"></p>
    <label for='content'>Content:</label>
    <textarea id="content" type="text" name='article[content]' style="display:block"><%= @article.content %></textarea>
    <input type="submit" name="submit" value="Submit" id="submit">
</form>